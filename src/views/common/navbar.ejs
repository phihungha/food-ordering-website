<div class="navbar">
  <a href="/" class="logo-container"><img src="/images/logo.svg" /></a>
  <input
    class="search-box"
    id="product-search-box"
    type="text"
    placeholder="Nhập tên sản phẩm cần tìm..."
    value="<%= locals?.searchTerm %>"
  />
  <ul class="navbar-link-list">
    <li>
      <a href="/products"><i class="fa-icon fa-solid fa-boxes-stacked"></i></a>
    </li>

    <% if (isSignedIn) { %>
      <li>
        <a href="/my-cart">
          <i class="fa-icon fa-solid fa-cart-shopping"></i>
        </a>
      </li>
      <li>
        <a href="/my-orders"><i class="fa-icon fa-solid fa-file-invoice"></i></a>
      </li>
      <li>
        <a href="/logout"
          ><i class="fa-icon fa-solid fa-right-from-bracket"></i
        ></a>
      </li>
      <% } else { %>
        <li><a href="/login">Đăng nhập</a></li>
        <li><a href="/signup">Đăng ký</a></li>
      <% } %>
  </ul>

  <script src="/scripts/navbar.js"></script>
</div>
