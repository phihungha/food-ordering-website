<div class="navbar">
  <a href="/" class="logo-container"><img src="/images/logo.svg" /></a>
  <input
    class="search-box"
    id="product-search-box"
    type="text"
    placeholder="Nhập tên sản phẩm cần tìm..."
    value="<%= locals?.searchTerm %>"
  />
  <ul class="navbar-link-list">
    <li>
      <a href="/products"
        ><span class="fa-icon material-symbols-outlined"> widgets </span></a
      >
    </li>

    <% if (isSignedIn) { %>
      <li>
        <a href="/my-cart">
          <span class="fa-icon material-symbols-outlined"> shopping_cart </span>
        </a>
      </li>
      <li>
        <a href="/my-orders"
          ><span class="fa-icon material-symbols-outlined">
            receipt_long
          </span></a
        >
      </li>
      <li>
        <a href="/profile">
          <p>Chào,</p>
          <p><%= currentUser.name %></p>
        </a>
      </li>
      <li>
        <a href="/logout"
          ><span class="fa-icon material-symbols-outlined"> logout </span></a
        >
      </li>
    <% } else { %>
      <li><a href="/login">Đăng nhập</a></li>
    <% } %>
  </ul>

  <script src="/scripts/navbar.js"></script>
</div>
