<html lang="en">
  <%- include('./common/head.ejs') %>

  <body>
    <%- include('./common/navbar.ejs') %>

    <div class="main-container center-container">
      <h1 class="title">Đăng nhập</h1>
      <form
        action="/login"
        method="post"
        class="vertical-container auth-field-container"
      >
        <input placeholder="Email..." required type="email" name="email" />
        <input
          placeholder="Mật khẩu..."
          required
          type="password"
          name="password"
        />
