<html lang="en">
  <%- include('./common/head.ejs') %>

  <body>
    <%- include('./common/navbar.ejs') %>

    <div class="main-container center-container vertical-container">
      <h1 class="title">Đăng nhập</h1>
      <form
        action="/login"
        method="post"
        class="vertical-container long-container"
      >
        <input
          class="form-input"
          placeholder="Email..."
          required
          type="email"
          name="email"
        />
        <input
          class="form-input"
          placeholder="Mật khẩu..."
          required
          type="password"
          name="password"
        />
        <input class="form-button" type="submit" value="Đăng nhập" />
      </form>
      <p>Chưa có tài khoản? Hãy <a href="signup">đăng ký</a></p>
    </div>

    <%- include('./common/footer.ejs') %>
  </body>
