<html lang="en">
  <%- include('./common/head.ejs') %>

  <body>
    <%- include('./common/navbar.ejs') %>

    <div class="main-container vertical-container-nowrap">
      <div class="centered item-shadow">
        <img
          width="350"
          height="350"
          src="<%= product.imageUrl %>"
        />
        <div class="vertical-list">
          <div class="name"><%= product.name %></div>
          <div class="price">
            <%= currencyFormatter.format(product.price) %>
          </div>
          <div>
            <p class="description-product">
              Loại: <%= product.category.name %>
            </p>
            <p class="description-product">Mô tả:</p>
            <p class="description-product"><%= product.description %></p>
          </div>
          <form action="/my-cart" method="post">
            <input
              type="number"
              name="productId"
              hidden
              value="<%= product.id %>"
            />
            <div class="product-padding">
              <input
                type="number"
                name="quantity"
                min="1"
                value="<%= cartQuantity %>"
              />
              <input
                type="submit"
                value="Add to Cart"
              />
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="main-container vertical-container">
      <div class="section-container">
        <h1>Hot nhất</h1>
        <div class="grid-list">
          <% popularProducts.forEach(product => { %>
            <div class="grid-item item-shadow">
              <img
                class="grid-item-image"
                src="https://cityfarmer.vn/wp-content/uploads/2019/04/raumuong-1024x683.jpg"
              />
              <div class="grid-item-info">
                <p class="item-title">
                  <a href="/products/<%= product.id %>"><%= product.name %></a>
                </p>
                <p class="item-subtitle"><%= product.category.name %></p>
                <p class="item-subtitle right-text"><%= currencyFormatter.format(product.price) %></p>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
