{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      "**/views/**/*",
      {
        "include": "**/public/**/*",
        "exclude": "**/public/**/*.ts"
      }
    ]
  }
}
